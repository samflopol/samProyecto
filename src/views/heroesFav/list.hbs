<div class="container">
    <div class="row mt-5">
        <h3 class="text-center text-uppercase p-2"> lista de super heroes</h3>


        {{#if personas}}

            <table class="table text-center">
                <thead>
                    <tr class="table-dark">
                        <th scope="col" class="col-4">nombre     </th>
                        <th scope="col">poder </th>
                        <th scope="col">debilidad</th>
                        <th scope="col">edad</th>
                        <th scope="col"> Imagen  </th>
                        <th scope="col">acciones   </th>
                    </tr>
                </thead>
                    {{#each personas}}
                        <tr>
                            <td>{{name}}</td>
                            <td>{{Powers}}</td>
                            <td>{{weakness}}</td>
                            <td>{{age}}</td>
                            <td>
                                <img src="/uploads/{{imagen}}" class="card-img-top mx-auto m-2 rounded-circle" style="width: 150px; height: 150px;display:block;">
                            </td>
                            
                            <td>
                                <div class="btn-group">
                                    <a href="/edit/{{id}}" class="btn btn-warning p-2">
                                        <i class="fa-solid fa-pencil"></i>
                                    </a>
                                    <a href="/delete/{{id}}" class="btn btn-danger p-2">
                                        <i class="fa-solid fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    {{/each}}
                <tbody>

                </tbody>

            </table>

        {{else}}

            <div class="card text-center mx-auto">
                <div class="card-header">
                    <h3> Debes añadir a un super heroe</h3>
                </div>
                <div class="card-body">
                    <p>Presiona este boton para que puedas registrar a un super heroeen la aplicacion</p>
                    <a href="/add" class="btn btn-primary"> Ir a añadir</a>
                </div>
            </div>

        {{/if}}


    </div>
</div>